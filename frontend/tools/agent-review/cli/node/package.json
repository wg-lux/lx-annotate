{
  "name": "agent-review-cli",
  "private": true,
  "type": "module",
  "scripts": {
    "agent:prompt": "ts-node tools/agent-cli/src/cli.ts prompt",
    "agent:validate": "ts-node tools/agent-cli/src/cli.ts validate --output agent_output.json",
    "agent:collect": "ts-node tools/agent-cli/src/cli.ts collect",
    "agent:full": "npm run test:unit -- RequirementGenerator.simplified --reporter=json > vitest.json && npm run agent:collect && npm run agent:prompt"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "zod": "^3.23.8",
    "yargs": "^17.7.2"
  }
}
